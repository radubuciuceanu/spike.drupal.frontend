{
  "extends": [
    "standard",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react",
    "react-hooks",
    "import"
  ],
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "paths": [
          "."
        ]
      }
    }
  },
  "env": {
    "jest": true
  },
  "rules": {
    "implicit-arrow-linebreak": [
      "error",
      "beside"
    ],
    "react/jsx-indent-props": [
      "error",
      "first"
    ],
    "indent": [
      "error",
      2,
      {
        "ignoredNodes": [
          "JSXAttribute"
        ]
      }
    ]
  }
}
